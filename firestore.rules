rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null
        && request.auth.token.email in [
          "sunglee.ca@gmail.com",
          "sunglee.cfa@gmail.com",
          "stahr23@gmail.com"
        ];
    }

    // POSTS (Insights): public can read published, admins can write
    match /posts/{docId} {
      allow read: if resource.data.published == true;
      allow create, update, delete: if isAdmin();
    }

    // RANKINGS (if you use ranking_snapshots)
    match /ranking_snapshots/{docId} {
      allow read: if resource.data.published == true;
      allow create, update, delete: if isAdmin();
    }

    // (Optional) If you also have /rankings legacy collection
    match /rankings/{docId} {
      allow read: if resource.data.published == true;
      allow create, update, delete: if isAdmin();
    }
  }
}
